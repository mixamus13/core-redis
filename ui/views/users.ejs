<h2><%= title %></h2>

<a href="/users/new">
    <button>Создать пользователя</button>
</a>

<table>
    <thead>
    <tr>
        <th>Имя</th>
        <th>Возраст</th>
        <th>События</th>
        <th>Визиты</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    <% users.forEach(user => { %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.age %></td>
            <td><%= user.events.length %></td>
            <td><%= visits[user.id] ?? 0 %></td>
            <td>
                <form action="/users/<%= user.id %>/visit" method="POST" style="display:inline">
                    <button type="submit">Visit</button>
                </form>

                <form action="/users/<%= user.id %>/visit-massive" method="POST" style="display:inline">
                    <button type="submit">Visit 1000 Unsafe</button>
                </form>

                <form action="/users/<%= user.id %>/visit-incr" method="POST" style="display:inline">
                    <button type="submit">Visit 1000 INCR</button>
                </form>

                <form action="/users/<%= user.id %>/visit-watch" method="POST" style="display:inline">
                    <button type="submit">Visit 1000 WATCH</button>
                </form>

                <form action="/users/<%= user.id %>/visit-lock" method="POST" style="display:inline">
                    <button type="submit">Visit 1000 LOCK</button>
                </form>

                <form action="/users/<%= user.id %>/json" method="GET" style="display:inline">
                    <button type="submit">Просмотреть JSON</button>
                </form>

                <form action="/users/<%= user.id %>/save-json" method="POST" style="display:inline">
                    <button type="submit">Сохранить в JSON</button>
                </form>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>
